= tag "meta", charset: "utf-8"
= tag "meta", content: "IE=edge", "http-equiv" => "X-UA-Compatible"
= tag "meta", content: "width=device-width, initial-scale=1.0, maximum-scale=1", name: "viewport"
= tag "meta", name: "description", content: page_description
= tag "meta", name: "author", content: page_author
= tag "meta", name: "robots", content: smart_robots(current_page.path, config[:environment].to_s)
// Twitter
= tag "meta", name: 'twitter:card', content: page_twitter_card_type
= tag "meta", name: 'twitter:site', content: data.site.twitter_handle
= tag "meta", name: 'twitter:title', content: page_title
= tag "meta", name: 'twitter:description', content: page_description
= tag "meta", name: 'twitter:creator', content: page_twitter_handle
= tag "meta", name: 'twitter:image:src', content: page_image
// Google Plus
= tag "meta", itemprop: 'name', content: page_title
= tag "meta", itemprop: 'description', content: page_description
= tag "meta", itemprop: 'image', content: page_image
// Open Graph
= tag "meta", property: "og:url", content: current_page_url
= tag "meta", property: "og:title", content: page_title
= tag "meta", property: "og:description", content: page_description
= tag "meta", property: "og:image", content: page_image

- if current_page.data.preferred_url
  = tag "link", rel: 'canonical', href: current_page.data.preferred_url

%title= page_title

= partial "partials/analytics" if production?
= favicon_tag 'logo.png'
= favicon_tag 'logo.png', rel: 'apple-touch-icon', type: 'image/png'
= tag "link", rel: "apple-touch-icon", href: image_path("favicon.png")
= stylesheet_link_tag :site
= javascript_include_tag :bundle, async: !development?
