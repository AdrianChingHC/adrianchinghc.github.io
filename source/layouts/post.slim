  body.fade-in.cmon.post_layout
  a id="top"
  section.top-sidebar
    .container
      .row
        .widget.cats-widget.span4
          h3 Categories
          .widget-content
            ul
              - blog.tags.each do |tag|
                li
                  = link_to tag.first.capitalize, tag_path("#{tag.first}")
                  span = tag.last.count
        .widget.span4
          h3 Twitter
          .widget-content
            .twitter-container
              .tweet
                p
                  | The State of
                  span.custom #WordPress
                  | Themes: 87% of all WordPress theme shops sell themes on Themeforest
                  a.custom href="#"  http://supportdash.com/wordpress
              .tweet
                p
                  | What Are The Most Inspiring  Markepplace Moments Of ALl Time
                  a.custom href="#"  http://enva.to/1vgh5d
              .tweet
                p
                  | Our server maintenance is now done, so Envato Support should be working as normal now. If you see any problems please tweet
                  span.custom @envato_support
        .widget.span4
          h3 Dribbble
          .widget-content
            a.dribbble-image href="#"
              / img alt=("Latest Dribbble Project") src="../assets/images/blog/dribbble-image.png" /
  header#header.header
    .container
      .row
        .span12
          .logo
            a href="/"
              strong ADRIAN CHING
          .top-content
            nav.menu
              ul
                li.toggle
                  a href="#"  Menu
                li
                  a href="/blog"  Blog
            /! search and toggle
            / .search
            /   form.top-search
            /     input.s placeholder="search..." type="text" /
            /     input.submit type="submit" value="" /
            a.toggleSidebar href="#"
  section.blog.single-blog-page
    .container
      .row
        .top-pagination.span12
          .wrap
            = link_to '', current_article.next_article, :class => 'next'
            = link_to '', current_article.previous_article, :class => 'prev'
        .single-post
          .post-image.post-format-image.span12
            .wrapper
              img alt=("Standard Post Image") src="../#{current_article.data.image_url}" /
          .post-content
            .span12
              .post-inner-content
                h2.post-header #{current_article.title}
                .post-meta
                  span.date #{current_article.date.strftime('%b %e %Y')}
                  span.comments
                    a.comments[href="#{current_article.slug}#disqus_thread"]
                      | Comments
                .main-content.single-post-main-content
                  = yield
                .post-share
                  .tags
                    - current_article.tags.each do |t|
                      = link_to "##{t}", tag_path(t)
                  .share-box
                    .social-icons
                      a.facebook rel="noopener noreferrer" href="https://www.facebook.com/sharer/sharer.php?u=#{data.site.url}/#{current_article.slug}" target="_blank"
                      a.twitter rel="noopener noreferrer" href="https://twitter.com/home?status=I%20just%20read%20an%20awesome%20article%20from%20Adrian%20Ching!%20Check%20it%20out%20here%3A%20#{data.site.url}/#{current_article.slug}" target="_blank"
                    a.button.toggle-share-box href="#"  Share
              = disqus
              = disqus_count
  footer
    .container_footer
      .left
        p
          | Â© 2016
          a href="/"
            span  Adrian Ching
      .right
        a href="#top"
          | Return to Top
          | &nbsp;
          i.fa.fa-long-arrow-up
