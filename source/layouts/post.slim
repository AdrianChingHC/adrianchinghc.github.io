                  | Our server maintenance is now done, so Envato Support should be working as normal now. If you see any problems please tweet
                  span.custom @envato_support
        .widget.span4
          h3 Dribbble
          .widget-content
            a.dribbble-image href="#"
              img alt=("Latest Dribbble Project") src="../assets/images/blog/dribbble-image.png" /
  header#header.header
    .container
      .row
        .span12
          .logo
            a href="/"
              strong ADRIAN CHING
          .top-content
            nav.menu
              ul
                li.toggle
                  a href="#"  Menu
                li
                  a href="/"  Home
                li
                  a href="/blog"  Blog
                / li
                /   a href="/contact"  Contact
            /! search and toggle
            / .search
            /   form.top-search
            /     input.s placeholder="search..." type="text" /
            /     input.submit type="submit" value="" /
              /! toggle button
            a.toggleSidebar href="#"
  section.blog.single-blog-page
    .container
      .row
        /! pagination
        .top-pagination.span12
          .wrap
            = link_to '', current_article.next_article, :class => 'next'
            = link_to '', current_article.previous_article, :class => 'prev'
          /! end wrap
        /! end pagination
        /! single post [post with image]
        .single-post
          /! post image
          .post-image.post-format-image.span12
            .wrapper
              / a href="post.html"
              img alt=("Standard Post Image") src="../#{current_article.data.image_url}" /
            /! end wrapper
          /! end post image
          /! post content
          .post-content
            .span12
              /! post inner content
              .post-inner-content
                h2.post-header #{current_article.title}
                /! meta
                .post-meta
                  span.date #{current_article.date.strftime('%b %e %Y')}
                  span.comments
                    a.comments[href="#{current_article.slug}#disqus_thread"]
                      | Comments
                /! end post meta
                /! post main content
                .main-content.single-post-main-content
                  = yield
                /! share and tags
                .post-share
                  .tags
                    - current_article.tags.each do |t|
                      = link_to "##{t}", tag_path(t)
                  .share-box
                    .social-icons
                      a.facebook href="https://www.facebook.com/sharer/sharer.php?u=https://www.adrianching.com#{current_article.slug}" target="_blank"
                      a.twitter href="https://twitter.com/home?status=I%20just%20read%20an%20awesome%20article%20from%20Adrian%20Ching!%20Check%20it%20out%20here%3A%20https://www.adrianching.com#{current_article.slug}" target="_blank"
                    /! end social icons
                    a.button.toggle-share-box href="#"  Share
                  /! end share box
                /! end post share
              /! end inner content
              /! author
              / .post-inner-content.secondary-content-box
              /   /! author bio
              /   .author-bio
              /     /! avatar
              /     .avatar
              /       img alt=("Harry Kewell") src="assets/images/blog/images/avatar1.png" /
              /     /! end avatar
              /     /! user bio
              /     .author-bio-content
              /       h4
              /         a href="#"  Harry Kewell
              /       p
              /         | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Expedita, suscipit, quo, hic illo id consequatur adipisci facere fuga dolore odio sed veniam vel autem blanditiis est necessitatibus officiis corrupti quis.
                  /! end author bio
                /! end author bio
              /! end author
              = disqus
              = disqus_count
